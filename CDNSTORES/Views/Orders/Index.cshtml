@model IEnumerable<CDNSTORES.Models.CDNSTORES.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr class="thanh-ngang" />
<div class="banner-bootom-w3-agileits">
    <div class="row sm-gutter details-container">
        <!-- tittle heading -->
        <h3 class="tittle-w3l">
            <span class="heading-style">
                <i></i>
                <i></i>
                <i></i>
            </span>
        </h3>
        <!-- //tittle heading -->
        <div class="col-md-12 single-right-left bia-dangky">
            <p style="font-weight: bold;text-align: center">
                DANH SÁCH ĐƠN HÀNG
            </p>
            <div class="dang-ky" style=" border: 1px solid; margin-bottom: 20px; border-radius: 5px; text-align: center;">

                <table class="table border-table">
                    <tr class="table-tr">
                        <th class="table-th">
                            Tên khách hàng
                        </th>
                        <th class="table-th">
                            Địa chỉ
                        </th>
                        <th class="table-th">
                            Mã sản phẩm
                        </th>
                        <th class="table-th">
                            Kích cỡ
                        </th>
                        <th class="table-th">
                            Số lượng
                        </th>
                        <th class="table-th">
                            Tuỳ chọn
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderInfo.Place)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Product.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Size.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Number)
                            </td>
                            <td>
                                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Chi tiết", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>

            </div>

            <p style="font-weight: bold; text-align: center">
                @Html.ActionLink("THÊM ĐƠN HÀNG", "Create")
            </p>
            <hr style="border: 1px dashed #000;" />
            <img src="~/Content/images/bg_comingsoon.jpg" alt="" class="bia-dangky" style="width: 100%; border-radius: 5px; " />
        </div>
        
    </div>
</div>
<hr/>
